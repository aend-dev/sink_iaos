<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#38000000">

    <RelativeLayout
        android:id="@+id/rly_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">


        <LinearLayout
            android:padding="20dp"
            android:id="@+id/lly_bg"
            android:background="@drawable/xml_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="@font/notosans_bold"
                android:gravity="center"
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="@color/gray33"
                android:text="비밀번호 찾기"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:paddingBottom="28dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="22dp"
                android:fontFamily="@font/notosans_regular"
                android:text="선택된 클로버는 내정보 > 설정에서\n확인 가능합니다."
                android:textColor="@color/gray66"
                android:textSize="15dp" />

            <RelativeLayout
                android:background="@drawable/xml_login_btn"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_confirm1"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="16dp"
                    android:fontFamily="@font/notosans_regular"
                    android:text="확인" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>