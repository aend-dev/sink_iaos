<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#38000000">

    <RelativeLayout
        android:id="@+id/rly_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/lly_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:background="@drawable/xml_dialog"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="22dp"
                android:text="알림"
                android:textStyle="bold"
                android:fontFamily="@font/notosans_regular"
                android:textColor="@android:color/black"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:paddingBottom="28dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="22dp"
                android:fontFamily="@font/notosans_regular"
                android:text="선택된 클로버는 내정보 > 설정에서\n확인 가능합니다."
                android:textColor="@android:color/black"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_margin="1dp"
                    android:id="@+id/tv_confirm1"
                    android:layout_width="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="@drawable/xml_login_btn"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:fontFamily="@font/notosans_regular"
                    android:textStyle="bold"
                    android:text="확인" />

                <TextView
                    android:layout_marginLeft="8dp"
                    android:id="@+id/tv_confirm2"
                    android:layout_width="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="@drawable/xml_login_btn_w"
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp"
                    android:fontFamily="@font/notosans_regular"
                    android:textStyle="bold"
                    android:text="확인" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>