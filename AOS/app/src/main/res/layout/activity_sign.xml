<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/onlyWhite">

    <RelativeLayout
        android:layout_margin="20dp"
        android:id="@+id/test_sign"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_layout"/>

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/pre_btn_sign"
            android:background="@color/graybtn"
            android:text="취소"
            android:textColor="@color/onlyWhite"
            android:textSize="18dp"
            android:textStyle="bold"
            android:fontFamily="@font/notosans_regular"
            android:layout_width="130dp"
            android:layout_height="60dp"/>

        <Button
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_toEndOf="@+id/pre_btn_sign"
            android:id="@+id/ok_btn_sign"
            android:text="서명 완료"
            android:textColor="@color/onlyWhite"
            android:textSize="18dp"
            android:textStyle="bold"
            android:fontFamily="@font/notosans_regular"
            android:background="@color/buttonblue"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
    </RelativeLayout>


</RelativeLayout>